<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_BeforeStartActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tBeforeStartProgameName"
        android:layout_margin="30sp"
        android:text="Program Name"
        android:layout_marginTop="30sp"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/lvBeforeStartList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tBeforeStartProgameName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bBeforeStartModify"
        android:layout_below="@id/lvBeforeStartList"
        android:text="Modify"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bBeforeStartDelete"
        android:layout_below="@id/lvBeforeStartList"
        android:text="Delete"
        android:textSize="15sp"
        android:layout_marginEnd="40dp"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bBeforeStartStart"
        android:layout_below="@id/bBeforeStartModify"
        android:layout_centerHorizontal="true"
        android:text="Start Activity"
        android:layout_marginTop="10dp"/>

</RelativeLayout>